# =============================================================================
# üîê ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# üö® SECURITY WARNING: Copy this file to .env and update with your actual values
# DO NOT commit .env files to version control
# NEVER use default passwords in production!

# Database Configuration
# üö® REQUIRED: Set a strong, unique password for PostgreSQL
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/bruno_site?sslmode=disable

# üîí Database SSL Configuration
# Valid modes: disable, require, verify-ca, verify-full
# - disable: No SSL (development only)
# - require: SSL required (production recommended)
# - verify-ca: SSL with CA verification
# - verify-full: SSL with full certificate verification
DATABASE_SSL_MODE=disable

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# Security Configuration
# üö® REQUIRED: Set strong, unique credentials for metrics endpoint
METRICS_USERNAME=admin
METRICS_PASSWORD=your_secure_metrics_password_here
METRICS_ENABLED=true

# API Configuration
PORT=8080
CORS_ORIGIN=http://localhost:3000

# LLM Configuration
GEMMA_MODEL=gemma3n:e4b
OLLAMA_URL=http://192.168.0.3:11434

# Test Configuration
TEST_DATABASE_URL=postgres://postgres:${POSTGRES_PASSWORD}@localhost:5432/bruno_site_test?sslmode=disable
